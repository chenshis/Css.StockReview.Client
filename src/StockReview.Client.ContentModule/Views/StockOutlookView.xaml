                                        <TextBlock
                                            Grid.Column="7"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{Binding Index}" />
                                        <TextBlock
                                            Grid.Column="8"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{Binding Index}" />
                                        <TextBlock
                                            Grid.Column="9"
                                            HorizontalAlignment="Center"
