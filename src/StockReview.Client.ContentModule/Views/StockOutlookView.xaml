<UserControl
    x:Class="StockReview.Client.ContentModule.Views.StockOutlookView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:StockReview.Client.ContentModule.Views"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <StackPanel>
            <UniformGrid Rows="1">
                <UniformGrid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="Foreground" Value="Black" />
                    </Style>
                    <Style x:Key="bdrFrame" TargetType="Border">
                        <Setter Property="MaxWidth" Value="240" />
                        <Setter Property="Margin" Value="5" />
                        <Setter Property="Background" Value="White" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="CornerRadius" Value="4" />
                        <Setter Property="Effect" Value="{DynamicResource EffectShadow2}" />
                    </Style>
                </UniformGrid.Resources>
                <Border Style="{StaticResource bdrFrame}">
                    <StackPanel>
                        <TextBlock
                            Margin="5,10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="今昨涨跌停" />
                        <Border
                            BorderBrush="#88000000"
                            BorderThickness="0,0,0,1"
                            Opacity="0.2" />
                        <StackPanel Margin="10,5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    HorizontalAlignment="Left"
                                    Foreground="Red"
                                    Text="涨停：" />
                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    Foreground="Red" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,5,0,0"
                                    HorizontalAlignment="Left"
                                    Foreground="Green"
                                    Text="跌停：" />
                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    Foreground="Green" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource bdrFrame}">
                    <StackPanel>
                        <TextBlock
                            Margin="5,10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="今昨涨跌家数" />
                        <Border
                            BorderBrush="#88000000"
                            BorderThickness="0,0,0,1"
                            Opacity="0.2" />
                        <StackPanel Margin="10,5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    HorizontalAlignment="Left"
                                    Foreground="Red"
                                    Text="上涨：" />
                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    Foreground="Red"
                                    Text="268 / 1199" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,5,0,0"
                                    HorizontalAlignment="Left"
                                    Foreground="Green"
                                    Text="下跌：" />
                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    Foreground="Green" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource bdrFrame}">
                    <StackPanel>
                        <TextBlock
                            Margin="5,10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="资金统计" />
                        <Border
                            BorderBrush="#88000000"
                            BorderThickness="0,0,0,1"
                            Opacity="0.2" />
                        <StackPanel Margin="10,5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    HorizontalAlignment="Left"
                                    Foreground="Red"
                                    Text="今日能量：" />
                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    Foreground="Red" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,5,0,0"
                                    HorizontalAlignment="Left"
                                    Foreground="Green"
                                    Text="昨日能量：" />
                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    Foreground="Green" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,5,0,0"
                                    HorizontalAlignment="Left"
                                    Foreground="Green"
                                    Text="北向资金：" />
                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    Foreground="Green" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource bdrFrame}">
                    <StackPanel>
                        <TextBlock
                            Margin="5,10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="连板率" />
                        <Border
                            BorderBrush="#88000000"
                            BorderThickness="0,0,0,1"
                            Opacity="0.2" />
                        <StackPanel Margin="10,5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    HorizontalAlignment="Left"
                                    Foreground="red"
                                    Text="二板：" />
                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    Foreground="Red" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,5,0,0"
                                    HorizontalAlignment="Left"
                                    Foreground="IndianRed"
                                    Text="三板：" />
                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    Foreground="IndianRed" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="0,5,0,0"
                                    HorizontalAlignment="Left"
                                    Foreground="IndianRed"
                                    Text="高板：" />
                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    Foreground="Green"
                                    TextWrapping="Wrap" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource bdrFrame}">
                    <StackPanel>
                        <TextBlock
                            Margin="5,10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="情绪" />
                        <Border
                            BorderBrush="#88000000"
                            BorderThickness="0,0,0,1"
                            Opacity="0.2" />
                        <lvc:PieChart
                            MinHeight="100"
                            MaxValue="100"
                            MinValue="0"
                            Series="{Binding Series}" />
                    </StackPanel>
                </Border>

                <Border
                    MaxWidth="240"
                    Margin="8"
                    Background="White"
                    BorderThickness="0"
                    CornerRadius="4"
                    Effect="{DynamicResource EffectShadow2}">
                    <StackPanel>
                        <TextBlock
                            Margin="5,10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="今昨炸板率" />
                        <Border
                            BorderBrush="#88000000"
                            BorderThickness="0,0,0,1"
                            Opacity="0.2" />
                        <StackPanel Margin="10,5">
                            <Grid VerticalAlignment="Center">
                                <TextBlock HorizontalAlignment="Left">
                                    <Run Foreground="Red">26.3%</Run>
                                    <Run Foreground="Gray">/</Run>
                                    <Run Foreground="Gray">29.8%</Run>
                                </TextBlock>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </UniformGrid>
            <StackPanel
                Margin="10,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <lvc:CartesianChart
                    Width="300"
                    Height="150"
                    Margin="5,0"
                    VerticalAlignment="Top"
                    Series="{Binding LineSeries}" />

                <DataGrid
                    Height="130"
                    Margin="0,0,5,0"
                    AutoGenerateColumns="False"
                    Background="White"
                    HeadersVisibility="All"
                    RowHeaderWidth="50">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="序号" />
                        <DataGridTextColumn Header="时间" />
                        <DataGridTextColumn Header="涨停板" />
                        <DataGridTextColumn Header="炸板" />
                        <DataGridTextColumn Header="跌停板" />
                        <DataGridTextColumn Header="跌封率" />
                        <DataGridTextColumn Header="翘板" />
                    </DataGrid.Columns>
                </DataGrid>
                <Grid
                    Margin="5,10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Margin="0,0,0,30" Orientation="Horizontal">
                        <CheckBox />
                        <TextBlock
                            Margin="10,0"
                            VerticalAlignment="Center"
                            Foreground="Black"
                            Text="不看ST股" />
                        <ComboBox Width="135" />
                    </StackPanel>
                    <Button
                        Grid.Column="1"
                        Width="100"
                        Margin="10,0,0,0"
                        VerticalAlignment="Top"
                        Content="同花情绪"
                        Style="{StaticResource ButtonPrimary}" />
                    <DatePicker
                        Grid.Row="1"
                        Width="220"
                        Height="30" />
                    <Button
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="100"
                        Margin="10,0,0,0"
                        Content="同花情绪"
                        Style="{StaticResource ButtonPrimary}" />
                </Grid>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <lvc:CartesianChart
                Width="800"
                Height="300"
                Series="{Binding CandleSeries}"
                XAxes="{Binding XAxes}" />
        </StackPanel>
    </Grid>
</UserControl>
